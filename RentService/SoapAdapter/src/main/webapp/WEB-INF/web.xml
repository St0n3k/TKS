<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <context-param>
        <param-name>AppName</param-name>
        <param-value>GuesthouseSoap</param-value>
    </context-param>

    <data-source>
        <name>java:global/jdbc/rent</name>
        <class-name>org.postgresql.ds.PGSimpleDataSource</class-name>
        <server-name>db</server-name>
        <port-number>5432</port-number>
        <database-name>rentdb</database-name>
        <user>rent</user>
        <password>rent</password>
        <!-- Example of how to use a Payara specific custom connection pool setting -->
    </data-source>
</web-app>